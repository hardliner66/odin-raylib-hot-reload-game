{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "windbg",
            "request": "launch",
            "preLaunchTask": "Build Debug",
            "name": "Debug",
            "target": "${workspaceFolder}/build/game_debug.exe",
            "verbosity": "debug",
            "windbgpath": "C:/Program Files (x86)/Windows Kits/10/Debuggers/x64/dbgeng.dll",
            "workingDir": "${workspaceFolder}",
            "sources": [
                "${workspaceRoot}/game",
                "${workspaceRoot}/main_hot_reload"
                //,"%RUST_SRC_PATH%"
            ]
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "Build Release",
            "name": "Release",
            "program": "${workspaceFolder}/build/game_release.exe",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Run File",
            "program": "odin",
            "args": [
                "run",
                "${fileBasename}",
                "-file"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}